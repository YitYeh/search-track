link(href="/dist/css/tree.css" rel="stylesheet")

style(type="text/css").
  .node circle {
    cursor: pointer;
    fill: #fff;
    stroke: steelblue;
    stroke-width: 1.5px;
  }

  .node text {
    font-size: 11px;
  }

  path.link {
    fill: none;
    stroke: #ccc;
    stroke-width: 1.5px;
  }

.row
  .col-md-3
    select(ng-model="query" class="form-control" ng-options="item as item.name for item in queries")
  .col-md-9
.row#tree

